@model IEnumerable<ASP.NET_Project.Models.Brand>

@{
    ViewBag.Title = "Brand - Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body table-responsive">
                <h4 class="card-title">Brand</h4>
                <p class="card-description d-sm-flex">
                    <span class="text-muted text-small my-auto">Click brand name to see detail</span>
                    <br class="d-sm-none" />

                    <a class="btn btn-sm btn-primary ml-auto mr-2 mt-2 mt-sm-0" href="@Url.Action("Create", "Brands")">
                        Create New <span class="mdi mdi-plus-circle"></span>
                    </a>
                </p>
                <table class="table" id="update-customer">
                    <thead class="text-primary">
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="d-none d-sm-table-cell">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="text-center d-none d-lg-table-cell">
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    <b class="text-small">@Html.DisplayFor(modelItem => item.Id)</b>
                                </td>
                                <td>
                                    <a class="badge w-100 badge-gradient-primary w-100"
                                        href="@Url.Action("Details", "Brands", new {id = item.Id})">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </a>
                                </td>
                                <td class="d-none d-sm-table-cell text-info">
                                    @item.Description
                                </td>
                                <td class="text-center d-none d-lg-table-cell">
                                    <a class="badge badge-warning" href="@Url.Action("Edit", "Brands", new {id = item.Id})">
                                        <span class="mdi mdi-pencil-box-outline"></span>
                                    </a>
                                </td>
                            </tr>
                            @*<a class="btn btn-link" href="@Url.Action("Edit", "Customers", new {id = item.Id})">
                                    <span class="mdi mdi-pencil-box-outline"></span>
                                </a>
                                <a class="btn btn-link" href="@Url.Action("Details", "Customers", new {id = item.Id})">
                                    <span class="mdi mdi-file-document"></span>
                                </a>
                                <a class="btn btn-link" href="@Url.Action("Delete", "Customers", new {id = item.Id})">
                                    <span class="mdi mdi-trash-can-outline"></span>
                                </a>*@
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>